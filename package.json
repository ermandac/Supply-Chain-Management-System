    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.1.0",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "@types/chart.js": "^2.9.41",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chart.js": "^4.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "ml-regression": "^6.2.0",
    "ml-regression-simple-linear": "^3.0.1",
    "ml-stat": "^1.3.3",
    "mongoose": "^7.4.0",
    "ng2-charts": "^5.0.3",
    "protobufjs": "^7.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.0",
    "@angular/cli": "~16.1.0",
    "@angular/compiler-cli": "^16.1.0",
    "@faker-js/faker": "^9.4.0",
    "@types/jasmine": "~4.3.0",
    "@types/long": "^4.0.2",
    "@types/node": "^20.4.2",
    "concurrently": "^8.2.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.0.1",
    "typescript": "~5.1.3"
