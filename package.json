{
  "name": "megaion-scms",
  "version": "1.0.0",
  "description": "Supply Chain Management System for Megaion Corporation",
  "main": "server.js",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "debug": "ng serve --source-map",
    "build:dev": "ng build --source-map",
    "build:prod": "ng build --source-map --configuration production",
    "server": "nodemon --max-old-space-size=4096 server.js",
    "client": "ng serve",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.1.0",
    "@angular/common": "^16.1.0",
